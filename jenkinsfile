pipeline {
    agent any

    environment {
        DIGITALOCEAN_API_TOKEN = credentials('digitalocean_token')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Check Infrastructure') {
            steps {
                script {
                    dir('/home/ahmed/Desktop/final project/final_project_digitalocean/final-project-digitalocean/terraform') {
                        def stateList = sh(script: 'terraform state list', returnStatus: true)
                        if (stateList == 0) {
                            echo 'Infrastructure already exists. Skipping creation.'
                        } else {
                            echo 'Infrastructure does not exist. Proceeding to create.'
                            sh 'terraform init'
                            sh "terraform apply -auto-approve -var do_token=${DIGITALOCEAN_API_TOKEN}"
                        }
                    }
                }
            }
        }
        
        stage('Create Inventory') {
            steps {
                script {
                    // Get the public IP from Terraform output
                    def publicIp = sh(script: 'terraform output -raw instance_ip', returnStdout: true).trim()
                    writeFile file: 'inventory.ini', text: "[web]\n${publicIp} ansible_ssh_private_key_file=/home/.ssh/id_rsa.pub"
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh 'ansible-playbook -i inventory.ini setup.yml'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
